<Window x:Class="StartBgChanger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StartBgChanger"
        mc:Ignorable="d" Style="{StaticResource BorderlessWindowStyle}"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="WpfImages/dva_12.jpg"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <Button Style="{StaticResource closeCaptionButtonStyle}" Click="ButtonBase_OnClick"></Button>
            <Button></Button>
        </DockPanel>
    </Grid>
</Window>
