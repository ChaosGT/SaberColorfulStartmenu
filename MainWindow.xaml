<Window x:Class="StartBgChanger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StartBgChanger"
        mc:Ignorable="d" Style="{StaticResource BorderlessWindowStyle}"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="WpfImages/dva_12.jpg"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <DockPanel.Background>
                <SolidColorBrush Color="Black" Opacity="0.4"></SolidColorBrush>
            </DockPanel.Background>
            <Button Style="{StaticResource closeCaptionButtonStyle}" Click="ButtonBase_OnClick" DockPanel.Dock="Right" Width="40"/>
            <Button Style="{StaticResource minCaptionButtonStyle}" Click="ButtonBase_OnClick_1" DockPanel.Dock="Right" Width="40"/>
            <TextBlock DockPanel.Dock="Left" Text="StartColorChanger" TextAlignment="Center" VerticalAlignment="Center" FontSize="20" Foreground="White" MouseLeftButtonDown="UIElement_OnMouseLeftButtonDown"/>
        </DockPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="30"></RowDefinition>
            </Grid.RowDefinitions>
            <ListBox x:Name="appList" Margin="2">
                <ListBox.Background>
                    <SolidColorBrush Color="White" Opacity="0.6"/>
                </ListBox.Background>
            </ListBox>
            <Grid Grid.Column="1" Margin="2">
                <Grid.Background>
                    <SolidColorBrush Color="Black" Opacity="0.2"></SolidColorBrush>
                </Grid.Background>
            </Grid>
            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal">
                <Button Style="{StaticResource CoreButton}" Click="ButtonBase_OnClick_2">
                    <Button.Background>
                        <SolidColorBrush Color="MediumSlateBlue" Opacity="0.6"/>
                    </Button.Background>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="WpfImages/refresh.png"/>
                        <TextBlock Text="刷新列表" VerticalAlignment="Center" FontSize="16" Margin="4" Foreground="White"></TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
